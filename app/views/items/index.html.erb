<div class="col-xs">
<h4>商品一覧(全<%= @items.count %>件)</h4>
<br>
<%= paginate @items %>

  <% @items.each do |item| %>
    <div class="box" style="float:left; margin-right:20px;">
      <p>
      <%= link_to "/items/#{item.id}" do %>
      <%= attachment_image_tag item, :image, format: 'jpeg', size: "100x100" %>
      <% end %>
      </p>
      <p><%= item.name %></p>
      <p>¥<%= item.price %></p>
    </div>
  </div>
  <% end %>
</div>
<br>